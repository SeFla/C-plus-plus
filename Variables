#include <iostream>

using namespace std;

int main()

{

  string ChracterName = "Johan";
  int ChracterAge = 100;


  cout << "There once was a man named " << ChracterName << "." << endl;
  cout << "He was " << ChracterAge << " years old." << endl;  
  cout << "He liked the name " << ChracterName << "," << endl;
  cout << "but did not liked being " << ChracterAge << endl;



  return 0;

}

