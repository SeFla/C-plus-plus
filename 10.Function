// samma funktionen men "calling" på annat sätt

#include <cmath>
#include <iostream>

using namespace std;



void sayHi(string name, int age)
{

  cout << "Hello " << name << " you are " << age;

}





int main()
{

  
  sayHi ("Mike", 10); 
  
  
 return 0;

}
