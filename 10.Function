#include <cmath>
#include <iostream>

using namespace std;



void sayHi(string name, int age);






int main()
{

  
  sayHi ("Mike", 60); 
  sayHi ("Salma", 50); 
  sayHi ("Jomana", 40); 
  sayHi ("Suzan", 30); 
  sayHi ("Asma", 20); 
  
  
 return 0;

}


void sayHi(string name, int age)

{
  cout << "Hello " << name << " you are " << age <<"\n";
}





