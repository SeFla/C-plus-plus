//  using input with numbers

#include <iostream>
#include <cmath>

using namespace std;

int main()
{


  int age;                              // man kan byta int till double datatyp för att printa ut 0.0 siffror eller char datatyp för att printa ut ex G
  cout << "Enter your age:";
  cin >> age;

  cout <<"You are " << age << " years old" ;

return 0;

}


_________________________________________________________________________________
// input getline för att output  långa rader 

#include <iostream>
#include <cmath>

using namespace std;

int main()
{

  string name;
  cout << "Enter your name: ";
  getline(cin, name);
  
  cout <<"Hello " << name;



return 0;

}
